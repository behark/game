# Environment Configuration for Speed Rivals Monetization System

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/speed-rivals
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/speed-rivals

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product and Price IDs (from Stripe Dashboard)
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_premium_yearly

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox # or live

# Apple/Google Play Configuration (for mobile)
APPLE_SHARED_SECRET=your_apple_shared_secret
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY_FILE=path/to/google-play-key.json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@speedrivals.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000
BASE_URL_PROD=https://your-domain.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@speedrivals.com

# File Storage (for user uploads, car images, etc.)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=speed-rivals-assets

# CDN Configuration
CDN_URL=https://cdn.speedrivals.com
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Game Configuration
DEFAULT_SPEED_COINS=500
DEFAULT_RACE_POINTS=1000
MAX_DAILY_REWARDS=3
BATTLE_PASS_PRICE=999 # in cents
PREMIUM_SUBSCRIPTION_PRICE=499 # in cents per month

# Tournament Configuration
TOURNAMENT_PLATFORM_FEE=0.10 # 10%
MAX_TOURNAMENT_PARTICIPANTS=1000
MIN_TOURNAMENT_PARTICIPANTS=2

# Currency Exchange Rates (fallback if API fails)
EUR_TO_USD=1.18
GBP_TO_USD=1.37
JPY_TO_USD=0.0091
CAD_TO_USD=0.80
AUD_TO_USD=0.74

# Feature Flags
ENABLE_TOURNAMENTS=true
ENABLE_BATTLE_PASS=true
ENABLE_PREMIUM_SUBSCRIPTION=true
ENABLE_MOBILE_PAYMENTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_LEADERBOARDS=true
ENABLE_ACHIEVEMENTS=true

# A/B Testing
AB_TESTING_ENABLED=true
OPTIMIZELY_SDK_KEY=your_optimizely_sdk_key

# Fraud Prevention
ENABLE_FRAUD_DETECTION=true
MAX_PURCHASE_AMOUNT=10000 # in cents
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# Backup and Monitoring
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
HEALTH_CHECK_INTERVAL=60000 # 1 minute
LOG_LEVEL=info

# Legal and Compliance
PRIVACY_POLICY_URL=https://speedrivals.com/privacy
TERMS_OF_SERVICE_URL=https://speedrivals.com/terms
REFUND_POLICY_URL=https://speedrivals.com/refunds

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD

# Admin Configuration
ADMIN_EMAIL=admin@speedrivals.com
SUPER_ADMIN_SECRET=your-super-admin-secret-key

# Development Only
DEBUG_PAYMENTS=true
MOCK_PAYMENT_RESPONSES=false
SKIP_EMAIL_VERIFICATION=false